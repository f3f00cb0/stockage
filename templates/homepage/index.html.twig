{% extends 'base.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}

<style>
input {
    font-size: 25px;
    font-weight: bold;
    height: 100px;
}
input[type="password"] {
    -webkit-text-security: disc;
}
input::placeholder {
  color: black;
  font-size: 1.2em !important;
}
html {
  overflow: hidden;
}
.space-y-4 div ul li {
  color: red;
}
</style>
<div id="accountCreationForm" class="min-h-screen bg-purple-400 flex justify-center items-center">
  <div class="absolute w-60 h-60 rounded-xl bg-purple-300 -top-5 -left130 z-0 transform rotate-45 hidden md:block"></div>
  <div class="absolute w-48 h-48 rounded-xl bg-purple-300 -bottom-6 -right130 transform rotate-12 hidden md:block"></div>
  <div class="py-12 px-12 bg-white rounded-2xl shadow-xl z-20">
  {{ form_start(registrationForm) }}
    <div>
      <h1 class="text-3xl font-bold text-center mb-4 cursor-pointer">Créer un compte</h1>
      <p class="w-80 text-center text-sm mb-8 font-semibold text-gray-700 tracking-wide cursor-pointer">Créer un compte pour accéder à votre espace de stockage !</p>
    </div>
    <div class="space-y-4">
      {{ form_row(registrationForm.username) }}
      {{ form_row(registrationForm.plainPassword) }}
    </div>
    <div class="text-center mt-6">
      <button type="submit" class="py-3 w-64 text-xl text-white bg-purple-400 rounded-2xl">S'inscrire</button>
      <p class="mt-4 text-sm">Vous avez déjà un compte? <a href="/login" class="underline  cursor-pointer"> Se connecter</a></p>
    </div>
  {{ form_end(registrationForm) }}
  </div>
  <div class="w-40 h-40 absolute bg-purple-300 rounded-full top16 right-12 hidden md:block"></div>
  <div class="w-20 h-40 absolute bg-purple-300 rounded-full bottom16 left-10 transform rotate-45 hidden md:block"></div>
</div>
{% endblock %}